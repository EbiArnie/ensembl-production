includeConfig './base.config'

//global setting vars
workDir = "/hps/nobackup/flicek/ensembl/production/nextflow/work/release_$ENS_VERSION/"
nextflow.enable.dsl=2
params.pipeline_dir = "/hps/software/users/ensembl/repositories/$USER/ensembl-hive/scripts/"
params.help = false

profiles {

	lsf {
               params {

                  species      = "''"  
                  division     = "''"
                  antispecies  = "''"
                  run_all      = 1
                  meta_filters = "''"
                  dbname       = "''" 
                  publishDir   = "/hps/nobackup/flicek/ensembl/production/nextflow/outputs/$USER/"

                }

		process.executor = 'lsf'
		process.scratch = "/hps/nobackup/flicek/ensembl/production/nextflow/scratch"
		process.log = "/hps/nobackup/flicek/ensembl/production/nextflow/logs/release_$ENS_VERSION/production.log"

        } 
	local {
		process.executor = 'local'
                process.log = '/hps/nobackup/flicek/ensembl/production/nextflow/logs/local.log' 
        }

        k8s {
	        process.executor = 'k8s'
	        container = 'busybox:latest'
	        containerOptions = '--volume /data/db:/db'
	        storageClaimName = 'vol-claim-nexflow-production'
	        storageMountPath = '/workflow'
	        storageSubPath = '/production'
	        namespace = "ensprod-nexflow"
	        env.KUBECONFIG = param.kubeconfig
	}

}
